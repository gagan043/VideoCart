<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:layout_marginTop="5dp"
    android:layout_height="120dp">

    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_video"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:src="@drawable/rate"
            app:sriv_border_color="@color/white"
            app:sriv_border_width="1dip"
            app:sriv_left_bottom_corner_radius="8dip"
            app:sriv_left_top_corner_radius="8dip"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="8dip"
            app:sriv_right_top_corner_radius="8dip">
        </com.joooonho.SelectableRoundedImageView>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_video"
            android:gravity="left"
            android:text="Wide Leg Red silk pant"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_video"
            android:gravity="left"
            android:text="Red"
            android:textColor="@color/lhtgray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_emi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_color"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_video"
            android:gravity="left"
            android:text="No Emi Cost"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_emi"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_video"
            android:gravity="left"
            android:text="$197.0"
            android:textColor="@color/orange"
            android:textSize="16sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/rel4"
        android:background="@color/gray"/>



</RelativeLayout>