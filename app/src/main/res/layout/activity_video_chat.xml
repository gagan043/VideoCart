<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gp2u.lite.activity.VideoChatActivity"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/remote_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/peer1_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_red_dark">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/peer2_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_green_dark">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/peer3_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_blue_dark">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/peer4_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_orange_dark">
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/local_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/localvertical_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/localhorizontal_guideline">

    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onCancel"/>

    <net.colindodd.toggleimagebutton.ToggleImageButton
        xmlns:tib="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lock_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tib:tib_drawable_on="@drawable/unlock"
        tib:tib_drawable_off="@drawable/lock"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/badge_layout1"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lock_button"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/message"
                android:onClick="onMessage"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/badge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/relative_layout"
            android:background="@drawable/item_count"
            android:text=" 1 "
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/switch_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onSwitchCamera"/>


    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/disconnect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onDisconnect"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onRefresh"/>

    <net.colindodd.toggleimagebutton.ToggleImageButton
        xmlns:tib="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mute_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        tib:tib_drawable_on="@drawable/muted"
        tib:tib_drawable_off="@drawable/unmuted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/localvertical_guideline"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/localhorizontal_guideline"
        app:layout_constraintGuide_begin="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

</android.support.constraint.ConstraintLayout>
