        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.WelcomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SignInActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ForgetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ChangePswdActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PswdThanksActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SuccessActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BuyerFdbThankActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BuyerSendFeedbackActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BuyerShareActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BuyerThanksOrderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AddAddressActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BuyerSettingActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>